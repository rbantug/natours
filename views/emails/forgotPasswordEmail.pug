extends baseEmail

block emailContent
  p Hi #{firstName},
  p 
    | Did you forgot your password? Try clicking on this
    |
    a(href=`${url}`, target='_blank') link
    |
    | or the button below.
  table.btn.btn-primary(
    role='presentation',
    border='0',
    cellpadding='0',
    cellspacing='0'
  )
    tbody
      tr
        td(align='left')
          table(
            role='presentation',
            border='0',
            cellpadding='0',
            cellspacing='0'
          )
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset Password
  p If you didn't forgot your password, please disregard this email.
