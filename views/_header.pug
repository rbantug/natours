header.header 
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png', alt='Natours logo') 
  nav.nav.nav--user
    if user //- check 'res.local' from authController.isLoggedIn
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='#') 
        - const firstName = user.name.split(" ")[0];
        img.nav__user-img(src=`img/users/${user.photo}`, alt=`${firstName}`)
        span= firstName
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta Sign up
